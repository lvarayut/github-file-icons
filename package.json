{
	"scripts": {
		"test": "run-s build",
		"build": "webpack",
		"watch": "webpack --watch",
		"update-version": "dot-json dist/manifest.json version $TRAVIS_TAG",
		"release:cws": "cd dist && webstore upload --auto-publish",
		"release": "run-s build update-version release:*"
	},
	"dependencies": {
		"file-icons-js": "websemantics/file-icons-js",
		"jquery": "^3.2.1",
		"webext-dynamic-content-scripts": "6.0.2"
	},
	"devDependencies": {
		"ava": "*",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
		"chrome-webstore-upload-cli": "^1.0.0",
		"copy-webpack-plugin": "^4.2.0",
		"dot-json": "^1.0.3",
		"npm-run-all": "^4.1.1",
		"webpack": "^3.10.0",
		"xo": "*"
	},
	"xo": {
		"envs": [
			"browser",
			"jquery"
		],
		"rules": {
			"import/no-unassigned-import": 0,
			"no-unused-vars": [
				2,
				{
					"varsIgnorePattern": "^h$"
				}
			]
		},
		"globals": [
			"browser"
		]
	},
	"ava": {
		"files": [
			"test/*.js"
		],
		"require": [
			"babel-register"
		]
	},
	"babel": {
		"env": {
			"testing": {
				"plugins": [
					"transform-es2015-modules-commonjs"
				]
			}
		}
	}
}
